# Mini Video Factory - Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=5000

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB
MAX_DURATION=600         # 10 minutes

# Directory Configuration (Docker paths)
UPLOAD_FOLDER=/app/data/uploads
TEMP_FOLDER=/app/data/temp
OUTPUT_FOLDER=/app/data/output
LOG_DIR=/app/logs

# Database Configuration - Choose one:
# Option 1: Supabase (External)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# Option 2: Local PostgreSQL (Docker)
# DATABASE_URL=postgresql://postgres:password@postgres:5432/mini_video_factory
# DB_PASSWORD=your-secure-password

# Storage Configuration (Wasabi) - OPTIONAL
WASABI_ENDPOINT=your_wasabi_endpoint_here
WASABI_REGION=your_wasabi_region_here
WASABI_BUCKET=your_bucket_name_here
WASABI_ACCESS_KEY_ID=your_wasabi_access_key_id_here
WASABI_SECRET_ACCESS_KEY=your_wasabi_secret_access_key_here

# Processing Configuration
WHISPER_MODEL=base
AUTO_EDITOR_ARGS=--no_open --margin 0.2

# Logging Configuration
LOG_LEVEL=INFO

# Docker Configuration
HOST_PORT=8080           # External port mapping
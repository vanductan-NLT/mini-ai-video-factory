# Mini Video Factory Docker Environment Configuration
# Copy this file to .env and update with your actual values for Docker deployment

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=5000

# Docker-specific ports
HOST_PORT=8080
NGINX_PORT=80
NGINX_SSL_PORT=443

# File Upload Configuration
MAX_FILE_SIZE=104857600
MAX_DURATION=600

# Directory Configuration (Docker paths)
UPLOAD_FOLDER=/app/data/uploads
TEMP_FOLDER=/app/data/temp
OUTPUT_FOLDER=/app/data/output
LOG_DIR=/app/logs

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# Storage Configuration (Wasabi)
WASABI_ENDPOINT=your_wasabi_endpoint_here
WASABI_REGION=your_wasabi_region_here
WASABI_BUCKET=your_bucket_name_here
WASABI_ACCESS_KEY_ID=your_wasabi_access_key_id_here
WASABI_SECRET_ACCESS_KEY=your_wasabi_secret_access_key_here

# Processing Configuration
WHISPER_MODEL=base
AUTO_EDITOR_ARGS=--no_open --margin 0.2

# Logging Configuration
LOG_LEVEL=INFO

# Gunicorn Configuration (Production)
GUNICORN_WORKERS=2
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=300
GUNICORN_KEEPALIVE=5
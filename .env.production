# Mini Video Factory - Production Environment Configuration
# For Coolify deployment

# Flask Configuration
SECRET_KEY=${SECRET_KEY}
FLASK_DEBUG=False
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB
MAX_DURATION=600         # 10 minutes

# Directory Configuration (Docker paths)
UPLOAD_FOLDER=/app/data/uploads
TEMP_FOLDER=/app/data/temp
OUTPUT_FOLDER=/app/data/output
LOG_DIR=/app/logs

# Database Configuration - Local PostgreSQL on Coolify
DATABASE_URL=${DATABASE_URL}

# Storage Configuration (Wasabi) - OPTIONAL
WASABI_ENDPOINT=${WASABI_ENDPOINT}
WASABI_REGION=${WASABI_REGION}
WASABI_BUCKET=${WASABI_BUCKET}
WASABI_ACCESS_KEY_ID=${WASABI_ACCESS_KEY_ID}
WASABI_SECRET_ACCESS_KEY=${WASABI_SECRET_ACCESS_KEY}

# Processing Configuration
WHISPER_MODEL=base
AUTO_EDITOR_ARGS=--no-open --margin 0.2s

# Logging Configuration
LOG_LEVEL=INFO

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300